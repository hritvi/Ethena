<html>
	<head>
		<title>
			Departmental Complaints
		</title>
		<style>
			.table {
				
			}

			#head {

			}
		</style>
	</head>
	<body>
			<div class="complaint-container">
			<br><br>
			<div class="complaint">
				
			<table class="table">
				<tr class='complaint-row' id='head'>
					<td>Title</td>
					<td>Content</td>
					<td>Plantiff</td>
					<td>Date</td>
					<td>Urgency</td>
				</tr>
				<% for (var i=0; i < data.length; i++) { %>
				   <tr class = 'complaint-row'>
				     <td><%= data[i].complaint %></td>
				     <td><%= data[i].plaintiff_pincode %></td>
				     <td><%= data[i].plaintiff_city %></td>
				     <td><%= data[i].urgency %></td>
		             <td><form action='/department' method="POST">
		                <hr/>
				        Finished : <input type="radio" name="status" value="finish" id="finish">
						On Process : <input type="radio" name="status" value="process" id="process">
						Not Started : <input type="radio" name="status" value="notstarted" id="notstarted">
						<input type="submit" id="submit" value="Submit">
						<input type="hidden" name="id" id="id" value= '<%= data[i].id %>' >
						<input type="hidden" name="department" id="department" value="<%= department %>">
		            </form>
		            </td>
				   </tr>
				<% } %>
			</table>
			</div>

		</div>
	</body>
</html>

	