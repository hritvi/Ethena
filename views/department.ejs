<html>
<head>
	<title>
		Complaints
	</title>
	<style>
		table, th, td {
			padding: 15px;
			border: 4px;
		}
	</style>
</head>
<body>
	<div class="complaint-container">
		<br><br>
		<div class="complaint">
			<table class="table">
				<tr class='complaint-row' id='head'>
					<td>Complain</td>
					<td>Urgency</td>
					<td>Votes</td>
					<td>Upvote</td>
					<td>Status</td>
				</tr>
				<% for (var i=0; i < data.length; i++) { %>
				<tr class = 'complaint-row'>
					<td id = '<%= "issue-" + i %>' ><%= data[i].issue %></td>
					<td id = '<%= "urgency-" + i %>'><%= data[i].urgency %></td>
					<td id = '<%= "votes-" + i %>'></td>
					<td><button id = '<%= "upvote-" + i %>' onclick="voteForCandidate(this.id)">Upvote</button></td>
					<td>
						<form action='/department' method="POST">
							<hr/>
							Finished :
							<% if (data[i]["complaint_status"] == "finish") { %>						
								<input style="margin-left:0px;margin-right:10px;" type="radio" name="status" value="finish" id="finish" checked/>
							<% } else { %>
								<input style="margin-left:0px;margin-right:10px;" type="radio" name="status" value="finish" id="finish"/>
							<% } %>
							On Process : 
							<% if (data[i]["complaint_status"] == "process") { %>						
								<input style="margin-left:0px;margin-right:10px;" type="radio" name="status" value="process" id="process" checked/>
							<% } else { %>
								<input style="margin-left:0px;margin-right:10px;" type="radio" name="status" value="process" id="process"/>
							<% } %>	
							Not Started : 
							<% if (data[i]["complaint_status"] == "notstarted") { %>						
								<input style="margin-left:0px;margin-right:10px;" type="radio" name="status" value="notstarted" id="notstarted" checked/>
							<% } else { %>
								<input style="margin-left:0px;margin-right:10px;" type="radio" name="status" value="notstarted" id="notstarted"/>
							<% } %>
								<input type="submit" id="submit" value="Submit"/>
						</form>
					</td>
				</tr>
				<% } %>
			</table>
		</div>
	</div>
	<script src="https://cdn.jsdelivr.net/gh/ethereum/web3.js/dist/web3.min.js"></script>
	<script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
	<script src="js/issueHandler.js"></script>
</body>
</html>

